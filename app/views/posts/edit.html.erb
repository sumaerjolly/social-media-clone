<br>
<div class="container post-card">    
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 pb-5">
            <div class="card border rounded">
                <div class="card-header p-0">
                    <div class="custom-bg text-white text-center py-2">
                        <h5>Edit post</h5>                         
                    </div>
                </div>
                <div class="card-body p-3">
                    <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                        <% if @post.errors.any? %>
                            <div class="panel panel-danger col-md-offset-1">
                                <div class="panel-heading"> 
                                    <h2 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this article from being saved: </h2>
                                    <div class="panel-body"> 
                                        <ul>
                                            <% @post.errors.full_messages.each do |msg| %> 
                                                <li>
                                                    <%= msg %> 
                                                </li>
                                            <% end %> 
                                        </ul>
                                    </div> 
                                </div>
                            </div> 
                        <% end %>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <%= f.text_field :title, class: 'form-control', autofocus: true %> 
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <%= f.text_area :body, rows: 2, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="text-center">
                            <%= f.submit class: 'btn custom-bg text-white btn-block rounded-2 py-2' %> 
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>