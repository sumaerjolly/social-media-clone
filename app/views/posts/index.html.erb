
<div class="container">
    <div class='row'>
        <div class='col-md-9'>
    <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <% if @post.errors.any? %>
                <div class="panel panel-danger col-md-offset-1">
                    <div class="panel-heading"> 
                        <h2 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this article from being saved: </h2>
                        <div class="panel-body"> 
                            <ul>
                                <% @post.errors.full_messages.each do |msg| %> 
                                    <li>
                                        <%= msg %> 
                                    </li>
                                <% end %> 
                            </ul>
                        </div> 
                    </div>
                </div> 
            <% end %>
                <div class='form-group'>
                    <div class='control-label col-md-1'>
                        <%= f.label :title %> 
                    </div>
                    <div class='col-md-11'>
                        <%= f.text_field :title, class: 'form-control', placeholder: 'Title of post', autofocus: true %> 
                    </div>
                </div>
                <div class='form-group'>
                    <div class='control-label col-md-1'> 
                        <%= f.label :body %>
                    </div>
                    <div class='col-md-11'>
                        <%= f.text_area :body, rows: 2, class: 'form-control', placeholder: 'Body of article' %>
                    </div> 
                </div>
                <div class='form-group'>
                    <div class='col-md-offset-1 col-md-11'>
                        <%= f.submit class: 'btn btn-primary btn-lg pull-right' %> 
                    </div>
                </div> 
            <% end %>
        </div> 
    </div>
</div>

<h1> All Posts </h1>

<% @posts.each do |post| %>
    <ul>
       <li> <%= post.title %><br></li>
        <li><%= post.body%></li>

    </ul>
<% end %>
