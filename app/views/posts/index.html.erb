<div class="card" style="width: 18rem;">
  <div class="card-body">
<%= form_for @post do |f| %>
    <h5 class="card-title">New Post</h5>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <h6 class="card-subtitle mb-2 text-muted"></h6>
    <p class="card-text">
    <%= f.label :body %><br></p>
    <%= f.text_area :body %><br>
    <%= f.submit %><br>
    <a href="#" class="card-link">Edit link</a>
    <a href="#" class="card-link">Delete link</a>
<% end %>
</div>
</div>
