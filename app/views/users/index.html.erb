<h1 align = "center" >All Socail App Users </h1><br>
<div class="container">
    <ul class="list-group">
    <% @users.each do |user| %>
        <li class="list-group-item"><%= link_to user.full_name, user_path(user) %>
        <% if current_user.friend?(user) %>
            <%= link_to "Remove Friend",  delete_friend_path(user), method: :delete,  data: { confirm: "Are you sure you no longer want to be friends with this user ?"} %>
            
        <% elsif current_user.sent_request?(user) %>
            <%= link_to "Cancel Request", "#" %>
        <% elsif current_user.friend_requests.include?(user) %>
            <%= link_to "Accept Request", "#"%>
            <%= link_to "Reject Reqeust", "#"%>
        <% elsif current_user == user %>
            <%= link_to "View Profile", "#" %>
        <% else %>
            <%= form_for(@friendship, url: friendships_path(@friendship)) do |f| %>
              
                <%= f.hidden_field :friend_id, value: user.id  %>
                <%= f.submit "Add As Friend", class: "btn btn-primary" %>
            <% end %>
        <% end %>
        </li>
    <% end %>
</div>