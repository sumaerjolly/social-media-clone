<h1 align = "center" >All Socail App Users </h1><br>
<div class="container">
    <ul class="list-group">
    <% @users.each do |user| %>
        <li class="list-group-item"><%= link_to user.full_name, user_path(user) %>
            <%= form_for(@friendship, url: friendships_path(@friendship)) do |f| %>
              
                <%= f.hidden_field :friend_id, value: user.id  %>
                <%= f.submit "Add As Friend", class: "btn btn-primary" %>
            <% end %>
        </li>
    <% end %>
</div>