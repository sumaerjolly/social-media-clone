<br>
<div class="container">
<div class="row">
    <div class="col-md-4">
        <div class="card" style="width: 18rem;">
            <%= gravatar_for @user, size: 150 %>
        
            <div class="card-body">
                <h3 class="card-title"> <%= @user.full_name %></h3>
                <h5> <%= @user.email %> </h5>
                <h5> <%= @user.gender %> </h5>
                <h5> <%=  @user.date_of_birth.to_formatted_s(:long_ordinal) %> </h5>

                <% if @user === current_user %>
                    <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>
    </div>


    <div class="col-md-4">
    <div class="container post-card">    
            <div class="card border rounded">
                <div class="card-header p-0">
                    <div class="custom-bg text-white text-center py-2">
                        <h5>New post</h5>                         
                    </div>
                </div>
                <div class="card-body p-3">
                    <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                        <% if @post.errors.any? %>
                            <div class="panel panel-danger col-md-offset-1">
                                <div class="panel-heading"> 
                                    <h2 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this article from being saved: </h2>
                                    <div class="panel-body"> 
                                        <ul>
                                            <% @post.errors.full_messages.each do |msg| %> 
                                                <li>
                                                    <%= msg %> 
                                                </li>
                                            <% end %> 
                                        </ul>
                                    </div> 
                                </div>
                            </div> 
                        <% end %>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <%= f.text_field :title, class: 'form-control', placeholder: 'Title of post', autofocus: true %> 
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <%= f.text_area :body, rows: 2, class: 'form-control', placeholder: 'Body of article' %>
                            </div>
                        </div>
                        <div class="text-center">
                            <%= f.submit class: 'btn custom-bg text-white btn-block rounded-2 py-2' %> 
                    <% end %>
                </div>
            </div>
        </div>

<!-- other card -->
 <div class="row justify-content-center">
    <h3><%= @user.full_name %> posts</h3>
 </div><br>





<% @posts.each do |post| %>
    <div class="container post-card">    
                <div class="card border rounded-2">
            
                    <div class="card-header p-0">
                        <div class="custom-bg text-white text-center py-2">
                            <h5> <%= post.title %></h5>                         
                        </div>
                    </div>
                    <div class="card-body p-3">
                        <div class="form-group">
                            <div class="input-group mb-2">
                            <p style="font-size: 18px"><%= post.body%></p>    
                            </div>
                        </div>
                        <% if post.user === current_user%>
                          <%= link_to "Edit", edit_post_path(post), class: "btn btn-primary" %>
                          <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete the article ?"}, class: "btn btn-danger" %>
                        <% end%>
                    </div>
                  
                    
                </div>
            
            </div>
<% end %>

    </div>
    <div class="col-md-4">
    </div>
</div>
</div>

